# launch terminal
super + Return
   alacritty

# program launcher
super + space
   /home/turbo/.config/rofi/bin/launcher_colorful

# Tab menu
alt + Tab
    rofi -show window

# open wifi menu
super + i
    /home/turbo/.bin/rofi-wifi-menu.sh

# open bluetooth menu
super + b
    /home/turbo/.bin/rofi-bluetooth

# open powermenu
super + p
    brave --incognito

# open mpd menu
super + m
    /home/turbo/.bin/rofi-mpc

# open lofi menu
super + shift + l
    /home/turbo/.bin/rofi-lofi

# open rofi calculator
super + equal
    =

# open rofimoji
super + period
    rofimoji

# open whatsapp
super + shift + w
    google-chrome-stable --profile-directory="Profile 2" https://web.whatsapp.com

# launch lock screen
super + shift + l
    betterlockscreen -l blur

# launch software
super + {w,f,s,t,k,c,v}
    {brave, thunar, spotify, telegram-desktop, keepassxc, google-chrome-stable --profile-directory="Profile 1", code}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# turn on redshift
super + shift + o
    redshift -t 6500:4500 -l  31.276433:30.009311  &

# turn off redshift
super + shift + k
    pkill redshift

# set the window state
super + shift + {w,e}
    bspc node --state {tiled,floating}

# toggle fullscreen/non-fullscreen switch
super + shift + f
    bspc node -t "~"{fullscreen,tiled}

# focus the node in the given direction
super + {shift,ctrl + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# move forward/backword desktops
super + shift + {a,d}
    bspc desktop -f {prev,next}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Toggle beetwen floating & tiled
super + d
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# increase/decrease volume by 5%
XF86Audio{Raise,Lower}Volume
   pactl set-sink-volume 0 {+5%,-5%}

# toggle volume mute
XF86AudioMute
    pactl set-sink-mute 0 toggle

# brightness keys
XF86MonBrightness{Up,Down}
	brightnessctl set 25{+,-}

# next, previous, play-pause toggle
XF86Audio{Next,Prev,Play}
    playerctl {next,previous,play-pause}

# next, previous, play-pause toggle for mpd
ctrl + XF86Audio{Next,Prev,Play,Play}
    mpc {next,prev,pause,play}  && notify-send " ï¢† " "$(mpc current)"

# stop ncmpcpp
super + ctrl + s
    mpc stop

# preselect
# preselect the direction
super + ctrl + alt + {h,j,k,l}
        bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
        bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
        bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
        bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# reload configurations
super + shift + r
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
